<div class="row">
  <h1>Clients</h1>
</div>

<div class="row">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Client</th>
        <th>Revenue (Invoiced)</th>
        <th>Effective Rate</th>
        <th>Gross Cost</th>
        <th>Gross Profit</th>
        <th>GP %</th>
        <th>Net Cost</th>
        <th>Net Profit</th>
        <th>NP %</th>
      </tr>
    </thead>
    <tbody>
      <%= render 'metrics_by_client', metrics_by_client: @key_metrics.metrics_by_client %>
      <tr>
        <td><strong>Total</strong></td>
        <td><strong><%= number_to_currency(@key_metrics.revenue, precision: 0) %><strong></td>
        <td><strong><%= number_to_currency(@key_metrics.effective_rate, precision: 0) %><strong></td>
        <td><strong><%= number_to_currency(@key_metrics.gross_cost, precision: 0) %><strong></td>
        <td><strong><%= number_to_currency(@key_metrics.gross_profit, precision: 0) %><strong></td>
        <td><strong><%= number_to_percentage(@key_metrics.gross_profit_percentage * 100, precision: 0) %><strong></td>
        <td><strong><%= number_to_currency(@key_metrics.net_cost, precision: 0) %><strong></td>
        <td><strong><%= number_to_currency(@key_metrics.net_profit, precision: 0) %><strong></td>
        <td><strong><%= number_to_percentage(@key_metrics.net_profit_percentage * 100, precision: 0) %><strong></td>        
      </tr>
    </tbody>
  </table>
</div>
